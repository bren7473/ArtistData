<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idArtistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawablePadding="2dp"
            android:text="@string/artist_name" />

        <TextView
            android:id="@+id/idTrackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idArtistName"
            android:layout_marginStart="10dp"
            android:text="@string/track_name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/idTrackPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idArtistName"
            android:layout_toEndOf="@id/idTrackName"
            android:layout_marginEnd="10dp"
            android:gravity="end"
            android:text="@integer/track_price"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/idReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@id/idTrackName"
            android:text="@string/release_date"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/idPrimaryGenreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@id/idReleaseDate"
            android:text="@string/primary_genre"
            android:textColor="@color/black" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>